files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/00a_export_env_vars_on_host.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      echo Defaults:root \!requiretty >> /etc/sudoers
      for envvar in `jq -r '.optionsettings | {"aws:elasticbeanstalk:application:environment"}[] | .[]' /opt/elasticbeanstalk/deploy/configuration/containerconfiguration`
      do
        export envvar;
      done